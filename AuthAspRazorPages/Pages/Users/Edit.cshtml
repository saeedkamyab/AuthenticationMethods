@page
@model AuthAspRazorPages.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="editModel.Id" />

            <div class="form-group m-3">
                <label asp-for="Roles" class="control-label"></label>
                <select class="form-control" asp-for="editModel.RoleId"
                        asp-items="Model.Roles">
                    <option value="0">نقش</option>
                </select>

                <span asp-validation-for="editModel.RoleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="editModel.UserName" class="control-label"></label>
                <input asp-for="editModel.UserName" class="form-control" />
                <span asp-validation-for="editModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="editModel.Password" class="control-label"></label>
                <input asp-for="editModel.Password" class="form-control" />
                <span asp-validation-for="editModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="editModel.FullName" class="control-label"></label>
                <input asp-for="editModel.FullName" class="form-control" />
                <span asp-validation-for="editModel.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="editModel.FName" class="control-label"></label>
                <input asp-for="editModel.FName" class="form-control" />
                <span asp-validation-for="editModel.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="editModel.ProfilePhoto" class="control-label"></label>
                <input asp-for="editModel.ProfilePhoto" class="form-control" />
                <span asp-validation-for="editModel.ProfilePhoto" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
